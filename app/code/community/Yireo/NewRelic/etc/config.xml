<config>
    <modules>
        <Yireo_NewRelic>
            <version>1.1.0</version>
        </Yireo_NewRelic>
    </modules>

    <global>
        <blocks>
            <newrelic>
                <class>Yireo_NewRelic_Block</class>
            </newrelic>
        </blocks>
        <helpers>
            <newrelic>
                <class>Yireo_NewRelic_Helper</class>
            </newrelic>
        </helpers>
        <models>
            <newrelic>
                <class>Yireo_NewRelic_Model</class>
            </newrelic>
        </models>
        <events>
            <controller_action_predispatch>
                <observers>
                    <magebridge_controller_action_predispatch>
                        <type>singleton</type>
                        <class>Yireo_NewRelic_Model_Observer</class>
                        <method>controllerActionPredispatch</method>
                    </magebridge_controller_action_predispatch>
                </observers>
            </controller_action_predispatch>
            <core_block_abstract_to_html_after>
                <observers>
                    <newrelic_core_block_abstract_to_html_after>
                        <type>singleton</type>
                        <class>Yireo_NewRelic_Model_Observer</class>
                        <method>coreBlockAbstractToHtmlAfter</method>
                    </newrelic_core_block_abstract_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
            <model_save_after>
                <observers>
                    <newrelic_model_save_after>
                        <type>singleton</type>
                        <class>Yireo_NewRelic_Model_Observer</class>
                        <method>modelSaveAfter</method>
                    </newrelic_model_save_after>
                </observers>
            </model_save_after>
            <model_delete_after>
                <observers>
                    <newrelic_model_delete_after>
                        <type>singleton</type>
                        <class>Yireo_NewRelic_Model_Observer</class>
                        <method>modelDeleteAfter</method>
                    </newrelic_model_delete_after>
                </observers>
            </model_delete_after>
        </events>
    </global>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <newrelic translate="title" module="newrelic">
                                            <title>NewRelic</title>
                                        </newrelic>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
